<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Dark theme -->
    <style name="AppTheme.Dark" parent="AppTheme">
        <item name="android:windowBackground">@color/darkBackgroundColor</item>
        <item name="android:textColorPrimary">@color/darkTextColorPrimary</item>
        <item name="android:textColorSecondary">@color/darkTextColorSecondary</item>
        <!-- Adicione outros atributos para o modo escuro, se necessÃ¡rio -->
    </style>

</resources>
